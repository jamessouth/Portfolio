{
  "name": "portfolio",
  "version": "0.1.0",
  "scripts": {
    "start": "npm run watch:css && bsb -make-world -w -ws _ ",
    "server": "moduleserve ./ --port 3333",
    "build": "npm run clean && bsb -make-world && npm run build:css && parcel build ./index.html -d docs --no-source-maps",
    "clean": "bsb -clean-world && rm -rf docs",
    "test": "jest --collectCoverage",
    "watch:css": "postcss ./src/css/tailwind.css -o ./src/css/main.css",
    "build:css": "postcss ./src/css/tailwind.css -o ./src/css/main.css --env 'production'"
  },
  "keywords": [
    "BuckleScript",
    "ReasonReact",
    "reason-react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamessouth/portfolio.git"
  },
  "author": "james south",
  "license": "MIT",
  "dependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "reason-react": ">=0.7.1"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.5.1",
    "autoprefixer": "^9.8.6",
    "bs-jest-dom": "^4.1.1",
    "bs-platform": "^8.2.0",
    "bs-react-testing-library": "^0.7.3",
    "jest": "^26.5.2",
    "moduleserve": "^0.9.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-simple-asset-copier": "^1.0.2",
    "postcss-cli": "^7.1.2",
    "tailwindcss": "^1.8.10"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "TestUtils"
    ]
  }
}
